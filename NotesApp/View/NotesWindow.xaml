<Window x:Class="NotesApp.View.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesApp.View"
        xmlns:vm="clr-namespace:NotesApp.ViewModel"
        xmlns:uc="clr-namespace:NotesApp.View.UserControls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="NotesWindow" Height="600" Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <vm:NotesVM x:Key="vm"/>
    </Window.Resources>
    <Grid>
        <Border CornerRadius="25" Width="Auto">
            <Border CornerRadius="5"
                BorderThickness="1"
                Opacity="0.95">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#8A16c1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#060531" Offset="0"/>
                        <GradientStop Color="#1B1448" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Border>
        <DockPanel DataContext="{StaticResource vm}">
            <Grid Height="50" Width="Auto"  DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid Margin="0,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="NOTEIFY"
                           Foreground="DarkGray"
                           FontSize="24"
                           FontFamily="Century Gothic"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    <Button Style="{DynamicResource MinimizeButtonStyle}" x:Name="btnMinimize"
                        Grid.Column="1"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMinimize_Click" Margin="-10,0,10,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/minimize.png" 
                                            Stretch="Uniform" 
                                            AlignmentX="Center">
                                <ImageBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.8"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ImageBrush.RelativeTransform>
                            </ImageBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{DynamicResource CloseButtonStyle}" x:Name="btnClose"
                        Grid.Column="3"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/cross.png" 
                                    Stretch="Uniform" 
                                    AlignmentX="Center">
                                <ImageBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.7" CenterX="0.5" ScaleX="0.8" ScaleY="0.8"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ImageBrush.RelativeTransform>
                            </ImageBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </Grid>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="statusTextBlock"/>
                </StatusBarItem>
            </StatusBar>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition MinHeight="500"/>
                </Grid.RowDefinitions>
                <Button Style="{DynamicResource NewNotebookButtonStyle}" x:Name="btnNewNotebook"
                        BorderThickness="0"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Command="{Binding NewNotebookCommand}">
                    <Button.Background>
                        <ImageBrush ImageSource="/Images/plus.png" 
                                            Stretch="Uniform" 
                                            AlignmentX="Center">
                            <ImageBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.65" ScaleY="0.65"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Button.Background>
                </Button>
                <ListView DockPanel.Dock="Left"
                      Width="180"
                      Background="Transparent"
                      Grid.Row="1"
                      SelectedValue="{Binding SelectedNotebook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ItemsSource="{Binding Notebooks}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                      BorderBrush="{x:Null}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" 
                      ScrollViewer.CanContentScroll="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <uc:NotebookControl Notebook="{Binding}">
                                    <uc:NotebookControl.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Rename"
                                          Command="{Binding Source={StaticResource vm}, Path=EditCommand}"/>
                                        </ContextMenu>
                                    </uc:NotebookControl.ContextMenu>
                                </uc:NotebookControl>
                                <TextBox Text="{Binding Name, Mode=TwoWay}" 
                                 Visibility="{Binding Source={StaticResource vm},Path=IsVisible}"
                                 Height="20">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="LostFocus">
                                            <i:InvokeCommandAction Command="{Binding Source={StaticResource vm}, Path=EndEditingCommand}"
                                                           CommandParameter="{Binding}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Style="{DynamicResource NewNoteButtonStyle}" x:Name="btnNewNote"
                        Grid.Row="0"
                        BorderThickness="0"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Command="{Binding NewNoteCommand}"
                        CommandParameter="{Binding SelectedNotebook}">
                        <Button.Background>
                        <ImageBrush ImageSource="/Images/plus.png" 
                                            Stretch="Uniform" 
                                            AlignmentX="Center" TileMode="None">
                            <ImageBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.65" ScaleY="0.65"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Button.Background>
                </Button>
                <ListView DockPanel.Dock="Left"
                  Width="180"
                  Grid.Row="1"
                  SelectedValue="{Binding SelectedNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Notes}" Background="#FFD1E7FF">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <uc:NoteControl Note="{Binding}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ToolBar x:Name="NoteToolBar"
                         Padding="0,5,10,5"
                         Foreground="Black" 
                         Background="#FFD1E6FF" 
                         FontFamily="Century Gothic" 
                         FontSize="16" 
                         Margin="0,0,0,0" 
                         Grid.Row="0" 
                         Height="40"
                         ToolBarTray.IsLocked="True">
                    <Button Content="Speech"
                        Click="SpeechButton_Click" Margin="5,0,5,0"/>
                    <ToggleButton 
                    Content="B"
                    x:Name="boldButton"
                    FontWeight="Bold"
                    Click="BoldButton_Click"/>
                    <ToggleButton Content="I"
                              x:Name="italicButton"
                              FontStyle="Italic"
                              Click="italicButton_Click"/>
                    <ToggleButton x:Name="underlineButton"
                              Click="underlineButton_Click">
                        <TextBlock Text="U"
                               TextDecorations="Underline"/>
                    </ToggleButton>
                    <ComboBox x:Name="fontFamilyComboBox"
                          Width="100"
                          SelectionChanged="fontFamilyComboBox_SelectionChanged" Margin="10,0,1,0" Height="25"/>
                    <ComboBox x:Name="fontSizeComboBox"
                          Width="37"
                          IsEditable="True"
                          TextBoxBase.TextChanged="fontSizeComboBox_TextChanged" Height="25"/>
                    <Button Content="Save"
                        Click="SaveButton_Click" Margin="10,0,0,0"/>
                </ToolBar>
                <RichTextBox x:Name="richTextBoxContent"
                         TextChanged="richTextBoxContent_TextChanged"
                         SelectionChanged="richTextBoxContent_SelectionChanged"
                         Grid.Row="1"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
