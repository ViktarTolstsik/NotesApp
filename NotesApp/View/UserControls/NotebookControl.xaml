<UserControl x:Class="NotesApp.View.UserControls.NotebookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="•"
                   Foreground="AliceBlue"
                   Grid.Column="0"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Name}"
                   Foreground="AliceBlue"
                   Margin="10"
                   FontSize="20"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Grid.Column="1"
                   MaxWidth="240"
                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis"/>
        <Button Grid.Column="2" Height="20" VerticalAlignment="Stretch"/>
        <Button Grid.Column="3" Height="20" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>
